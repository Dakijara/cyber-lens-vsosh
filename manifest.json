{
  "manifest_version": 2,
  "name": "КиберЛинза",
  "version": "1.0",
  "description": "Firefox расширение для проверки безопасности URL и файлов через Kaspersky TIP",
  "permissions": [
    "activeTab",
    "storage",
    "https://*.kaspersky.com/*"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}

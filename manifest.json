{
  "manifest_version": 2,
  "name": "КиберЛинза - проверка файлов и ссылок",
  "version": "0.1.0",
  "description": "Проверка безопасности URL и хэшей файлов через Kaspersky OpenTIP.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "activeTab",
    "https://opentip.kaspersky.com/*"
  ],

  "background": {
    "scripts": [
      "src/utils.js",
      "src/storage.js",
      "src/api.js",
      "src/background.js"
    ]
  },

  "browser_action": {
    "default_title": "КиберЛинза - проверка файлов и ссылок",
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "cyberlens@vsosh.ru",
      "strict_min_version": "78.0"
    }
  }
}
